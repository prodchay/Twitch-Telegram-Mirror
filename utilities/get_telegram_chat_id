import os
from dotenv import load_dotenv
from telegram.ext import ApplicationBuilder, MessageHandler, filters, ContextTypes

"""
Run this to get the 'telegram_chat_id' in the .env
(You need to send the bot a message)
Make sure that you have entered the 'telegram_token' in the .env
"""

load_dotenv()
TOKEN = os.getenv("telegram_token")

async def show_chat_id(update, context: ContextTypes.DEFAULT_TYPE):
    print(f"Chat ID: {update.message.chat_id}")

app = ApplicationBuilder().token(TOKEN).build()
app.add_handler(MessageHandler(filters.ALL, show_chat_id))

app.run_polling()
